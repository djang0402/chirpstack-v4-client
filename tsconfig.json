{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "noImplicitOverride": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "useUnknownInCatchVariables": false,
      "lib": ["ESNext", "DOM"],
      "outDir": "./dist"
    },
    "include": ["./src/**/*"]
  }
  